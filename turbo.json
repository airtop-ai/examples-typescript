{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build:dev": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "build:packages": {
      "dependsOn": ["^build"],
      "inputs": ["packages/**"],
      "outputs": ["packages/**/dist/**"]
    },
    "verify-types": {
      "dependsOn": ["^verify-types"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "dependsOn": ["^build:dev"],
      "cache": false,
      "persistent": true
    }
  }
}
